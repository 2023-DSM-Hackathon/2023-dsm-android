<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView_Title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TextView_Des" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_sub</item>
    </style>

    <style name="TextView_Hint20" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_hint</item>
    </style>

    <style name="TextView_Hint16" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_hint</item>
    </style>

    <style name="TextView_Light" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_hint</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/edittext_normal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLength">30</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

    <style name="SmallEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="background">@drawable/edittext_normal</item>
        <item name="singleLine">true</item>
        <item name="paddingStart">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLength">30</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

    <style name="Button_Primary" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button_White" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Toggle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="CardView_Vote" parent="CardView">
        <item name="android:layout_width">136dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutHorizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
</resources>