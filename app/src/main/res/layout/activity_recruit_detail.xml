<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RecruitDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="상세"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_top" />

        <View
            android:id="@+id/view_profile_line"
            android:layout_width="360dp"
            android:layout_height="0.3dp"
            android:layout_marginTop="13dp"
            android:background="@color/color_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_title" />

        <TextView
            android:id="@+id/tv_recruit_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="30dp"
            android:text="제목입니다"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_profile_line" />

        <TextView
            android:id="@+id/tv_recruit_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2023/07/20"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_recruit_detail_title" />

        <TextView
            android:id="@+id/tv_recruit_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="14:20"
            app:layout_constraintStart_toEndOf="@id/tv_recruit_detail_date"
            app:layout_constraintTop_toBottomOf="@id/tv_recruit_detail_title"/>

        <TextView
            android:id="@+id/tv_recruit_detail_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:text="장소"
            app:layout_constraintTop_toBottomOf="@id/tv_recruit_detail_title"
            app:layout_constraintStart_toEndOf="@id/tv_recruit_detail_time" />

        <View
            android:id="@+id/view_recruit_line"
            android:layout_width="360dp"
            android:layout_height="0.3dp"
            android:layout_marginTop="13dp"
            android:background="@color/color_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recruit_detail_date" />

        <TextView
            android:id="@+id/tv_recruit_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="내용입니다"
            android:textColor="@color/black"
            android:layout_marginStart="45dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_recruit_line" />

        <TextView
            android:id="@+id/tv_recruit_detail_head_count"
            android:text="인원 : 17/20"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recruit_detail_content"/>

        <Button
            android:id="@+id/btn_recruit_detail_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button_Primary"
            android:text="신청"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_recruit_detail_head_count" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_recruit_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:backgroundTint="@color/color_main"
            android:contentDescription="submit"
            android:src="@drawable/jam_write"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>